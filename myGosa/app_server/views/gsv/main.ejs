<div class="main-wrap">
	<div class="content-wrap">
		<h2>신청</h2>
		<div class="content">
			<div class="photo">
				<img src="" alt=""/>
			</div>
			<div class="list">
				<table class="thead-tbl">
					<colgroup>
						<col style="width:6%">
						<col style="width:10%">
						<col style="width:25%">
						<col style="width:10%">
						<col style="width:8%">
						<col style="width:*">
					</colgroup>
					<thead>
						<tr>
							<th>NO</th>
							<th>고사장</th>
							<th>학교명</th>
							<th>강의실</th>
							<th>분반</th>
							<th>신청</th>
						</tr>
					</thead>
					<tbody>
						<% for(let resultCount=0; resultCount<result.length; resultCount++) {%>
						<tr>
						<td><%=resultCount+1%></td>
						<td><%=result[resultCount].EXAM_NAME%></td>
						<td>
							<a id="showClassInfo" data-target="<%=result[resultCount].EXAM_SEQ%>"><%=result[resultCount].EXAM_SCHOOL%><i class="fas fa-map-marker-alt icon"></i></a>
						</td>
						<% if(locals.result[resultCount+1] && result[resultCount].EXAM_SEQ == result[resultCount+1].EXAM_SEQ) { %>
							<td rowspan="<%=result[resultCount+1].PERIOD_CLASS%>"><%=result[resultCount+1].PERIOD_CLASS%></td>
						<% } else if(result[resultCount-1].EXAM_SEQ != result[resultCount].EXAM_SEQ) {%>
							<td><%=result[resultCount].PERIOD_CLASS%></td>
						<% } %>
						<td><%=result[resultCount].PERIOD_CLASS%></td>
						<% if(result[resultCount].USER_CLASS != '' && result[resultCount].USER_CLASS != null) {%>
						<td><%=result[resultCount].DEPARTMENT_NAME+' '+result[resultCount].NAME%>
						<% } else { %>
						<td><input type="button" value="신청하기" class="smallbtn blue"></td>
						<% } %>
						</tr>
						<% } %>
						<tr>
							<td rowspan="2">4</td>
							<td rowspan="2">대전</td>
							<td rowspan="2"><a href="#">대전여자중학교<i class="fas fa-map-marker-alt icon"></i></a></td>
							<td rowspan="2">2</td>
							<td>1</td>
							<td><input type="button" value="신청완료" class="smallbtn green" style="width:90px"></td>
						</tr>
						<tr>
							<td>2</td>
							<td><input type="button" value="신청취소" class="smallbtn red" style="width:90px"></td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
