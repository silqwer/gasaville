<link rel="stylesheet" type="text/css" href="/hana2/css/css.css">
<script type="text/javascript" src="/common/js/jquery/jquery.min.js"></script>
<script defer src="https://use.fontawesome.com/releases/v5.0.6/js/all.js"></script>

<% if(result == true && list.length > 0) { %>
<table id="cmtList" class="thead-tbl">
	<colgroup>
		<col style="width:15%">
		<col style="width:*">
		<col style="width:15%">
	</colgroup>
	<thead>
		<tr>	
			<th>기수</th>	
			<th>내용</th>	
			<th>작성자</th>	
		</tr>
	</thead>
	<tbody>
		<% for(let i=0; i<list.length; ++i){ %>
		<tr class="pop-comment">
			<td><%=list[i].SCHEDULE_NAME%></td>
			<td>
				<p class="fl">
					<input type="text" class="cmtCts" data-comment="<%=list[i].SEQ%>" value="<%=list[i].CONTENTS%>" readonly="readonly">
				</p>
				<!-- 사용자 비교 로직 추가  -->
				<% if ( userInfo.SEQ == list[i].USER_SEQ) {%>
				<p class="fr">
					<button type="button" data-comment="<%=list[i].SEQ%>" data-exam="<%=list[i].EXAM_SEQ%>" class="sbtn fcblue wrtBtn"><i class="fa fa-pencil-alt"></i></button>
					<button type="button" data-comment="<%=list[i].SEQ%>" data-exam="<%=list[i].EXAM_SEQ%>" class="sbtn fcred dltBtn"><i class="fa fa-trash-alt"></i></button>
					<button type="button" data-comment="<%=list[i].SEQ%>" data-exam="<%=list[i].EXAM_SEQ%>" class="sbtn fcgreen entBtn" style="display: none;" ><i class="fa fa-check"></i></button>
				</p>
				<% } %>
			</td>
			<td><%=list[i].USER_NAME%></td>
		</tr>
		<% } %>
	</tbody>
</table>
<div class="tac">
	<button type="button" id="cmtMoreBtn" data-start="<%=start%>" data-exam="<%=exam%>"  class="plusbtn whitebtn">더보기</button>
</div>
<% }else{ %>
<div>게시물이 없습니다.</div>
<% } %>

<script type="text/javascript" src="/gsv/js/main.js"></script>






			 	
			 