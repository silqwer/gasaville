<!DOCTYPE html>
<html>
	<head>
    <title><%= title %></title>
   	<% include ../common/head %>
  </head>
  <body>
    <input type="hidden" id="page" name="page" value="<%=page%>">
    <div class="main-wrap">
    	<% include ../common/menu %>
    	<div class="content-wrap">
    		<h2><%= title %></h2>
    		
    		<div class="search">
					<form id="searchForm" method="get">
					<fieldset>
						<legend>검색</legend>
						<input type="text" id="searchWord" value="<%=word%>">
						<input type="button" value="검색" class="sbtn" data-url="/admin/periods/list" id="searchBtn">
					</fieldset>
					</form>
				</div>
    		
				<div>
					<table class="thead-tbl">
						<colgroup>
							<col style="width:10%">
							<col style="width:*%">
						</colgroup>
						<thead>
							<tr>
				   			<th>번호</th>
				   			<th>일정명</th>		
				   		</tr>
						</thead>
						<tbody>
							<% for(let i=0; i<list.length; ++i){ %>
				   		<tr>
				   			<td><%=max-i%></td>
				   			<td><a href="/admin/periods/update/<%=page%>/<%=list[i].SCHEDULE_SEQ%>"><%=list[i].SCHEDULE_NAME%></a></td>
				   		</tr>
				   		<% } %>
						</tbody>
					</table>
				</div>
				
				<% if(result == true) { %>
				<div class="pagenum">
					<ul>
						<% if(page > pageSize) { %>
						<li><a href="/admin/periods/list/1/<%=search%>"><i class="fa fa-angle-double-left"></i></a></li>
						<li><a href="/admin/periods/list/<%=startPage-1%>/<%=search%>"><i class="fa fa-angle-left"></i></a></li>
						<% } %>
						
						<% for (var i=startPage; i<=endPage; i++) { %>
	        	<% if (i== page) {%>
	        	<li class="on"><%=i%></li>
	        	<% } else { %>
	        	<li><a href="/admin/periods/list/<%=i%>"><%=i%></a></li>
	       		<% } %>
	      		<% } %>
						
						<% if (endPage < totalPage) { %>
						<li><a href="/admin/periods/list/<%=endPage+1%>/<%=search%>"><i class="fa fa-angle-right"></i></a></li>
						<li><a href="/admin/periods/list/<%=totalPage%>/<%=search%>"><i class="fa fa-angle-double-right"></i></a></li>
			      <% } %>
					</ul>
				</div>
				<% } %>

				<div class="btnfr">
					<button type="button" id="addBtn" class="mbtn skybtn">등록</button>
				</div>
    	</div>
    </div>
 
  </body>
  <script src='/adm/js/periods.js'></script>
</html>
