<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/adm/css/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
   
   	<table>
   		<tr>
   			<th>번호</th>
   			<th>기수명</th>
   			<th>신청일자</th>
   			<th>출석일자</th>		
   		</tr>
   		<% for(let i=0; i<list.length; ++i){ %>
   		<tr>
   			<td><%=max-i%></td>
   			<td><a href="/admin/periods/update/<%=page%>/<%=list[i].SEQ%>"><%=list[i].NAME%></a></td>
   			<td><%=list[i].APPLY_DATE%></td>
   			<td><%=list[i].ATTENDANCE_DATE%></td>
   		</tr>
   		<% } %>
   	</table>
   	<div>
      <% if(page > pageSize) { %>
        [ <a href="/admin/periods/list/1" style="text-decoration: none;">◀◀</a> ]
        [ <a href="/admin/periods/list/<%=startPage-1%>" style="text-decoration: none;">◀</a> ]
      <% } %>
     
      &nbsp;&nbsp;
      <% for (var i=startPage; i<=endPage; i++) { %>
        <% if (i== page) {%>
          [ <%=i%> ]
        <% } else { %>
          [ <a href="/admin/periods/list/<%=i%>" style="text-decoration: none;"><%=i%></a> ]
        <% } %>
      <% } %>
      &nbsp;&nbsp;
      <% if (endPage < totalPage) { %>
        [ <a href="/admin/periods/list/<%=endPage+1%>" style="text-decoration: none;">▶</a> ]
        [ <a href="/admin/periods/list/<%=totalPage%>" style="text-decoration: none;">▶▶</a> ]
      <% } %> 
      
    </div>
    <div>
    <button id="addBtn">등록</button>
    </div>
  </body>
</html>
