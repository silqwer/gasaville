  <head>
    <title><%= title %></title>
    <% include ../common/head %>
  </head>
  <body>
  	<input type="hidden" id="noticePage" name="noticePage" value="<%=page%>">
    <div class="main-wrap">
    	<% include ../common/menu %>
    	<div class="content-wrap">
    		<h2><%= title %></h2>
    		 <div>
		    	<select>
				  <option value="name" selected="selected">제목</option>
				  <option value="contents">내용</option>
				</select>
		    </div>
		    <div><input type="text" id="searchWord" name="searchWord"><button>검색</button></div>
    		<div>
				<table class="thead-tbl">
					<colgroup>
						<col style="width:12%">
						<col style="width:*%">
						<col style="width:20%">
						<col style="width:20%">
					</colgroup>
					<thead>
						<tr>
							<th>번호</th>
				   			<th>제목</th>
				   			<th>시작일</th>
				   			<th>종료일</th>
						</tr>
					</thead>
					<tbody>
						<% for(let i=0; i<list.length; ++i){ %>
				   		<tr>
				   			<td><%=max-i%></td>
				   			<td><a href="/admin/notice/update/<%=page%>/<%=list[i].SEQ%>"><%=list[i].TITLE%></a></td>
				   			<td><%=list[i].START_DATE%></td>
				   			<td><%=list[i].END_DATE%></td>
				   		</tr>
				   		<% } %>
					</tbody>
				</table>
			</div>
			<div class="pagenum">
				<ul>
					<% if(page > pageSize) { %>
					<li><a href="/admin/notice/list/1"><i class="fa fa-angle-double-left"></i></a></li>
					<li><a href="/admin/notice/list/<%=startPage-1%>"><i class="fa fa-angle-left"></i></a></li>
					<% } %>
					
					<% for (var i=startPage; i<=endPage; i++) { %>
		        	<% if (i== page) {%>
		        	<li class="on"><%=i%></li>
		        	<% } else { %>
		        	<li><a href="/admin/notice/list/<%=i%>"><%=i%></a></li>
		       		<% } %>
		      		<% } %>
					
					<% if (endPage < totalPage) { %>
					<li><a href="/admin/notice/list/<%=endPage+1%>"><i class="fa fa-angle-right"></i></a></li>
					<li><a href="/admin/notice/list/<%=totalPage%>"><i class="fa fa-angle-double-right"></i></a></li>
		      	    <% } %>
				</ul>
			</div>
			<div><button id="addBtn">등록</button></div>
    	</div>
    </div>
    
    
    
    
