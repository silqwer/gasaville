<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <% include ../common/head %>
  </head>
  <body>
  <div class="main-wrap">
  	<% include ../common/menu %>
  	<div class="content-wrap">
  		<h2><%= title %></h2>
  		
  		<div>
					<table class="thead-tbl">
						<colgroup>
							<col style="width:12%">
							<col style="width:20%">
							<col style="width:*%">
							<col style="width:20%">
						</colgroup>
						<thead>
							<tr>
				   			<th>부서명</th>
				   			<th>수정</th>
				   			<th>삭제</th>
				   		</tr>
						</thead>
						<tbody>
							<% for(let i=0; i<list.length; ++i){ %>
				   		<tr>
				   			<td><input type="text" id="name_<%=list[i].SEQ%>" value="<%=list[i].NAME%>"></td>
				   			<td><button id="update_<%=list[i].SEQ%>" class="update">수정</button></td>
				   			<td><button id="delete_<%=list[i].SEQ%>" class="delete">삭제</button></td>
				   		</tr>
				   		<% } %>
						</tbody>
					</table>
				</div>
				
				<div>
					<table>
			   		<tr>
			   			<th>부서명</th>
			   			<th>등록</th>
			   		</tr>
			   		<tr>
			   			<td><input type="text" id="name" value=""></td>
			   			<td><button id="addBtn">등록</button></td>
			   		</tr>
			   	</table>  
				</div>
  		
  	</div>
  </div>
  
  </body>
  <script src='/adm/js/department.js'></script>
</html>
