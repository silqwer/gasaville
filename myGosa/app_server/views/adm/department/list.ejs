<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <% include ../common/head %>
  </head>
  <body>
  <div class="main-wrap">
  	<% include ../common/menu %>
  	<div class="content-wrap">
  		<h2><%= title %></h2>
  		
  		<div>
					<table class="thead-tbl">
						<colgroup>
							<col>
							<col style="width:8%">
							<col style="width:8%">
						</colgroup>
						<thead>
							<tr>
				   			<th>부서명</th>
				   			<th>수정</th>
				   			<th>삭제</th>
				   		</tr>
						</thead>
						<tbody>
							<% for(let i=0; i<list.length; ++i){ %>
				   		<tr>
				   			<td><input type="text" id="name_<%=list[i].SEQ%>" class="listmodi" value="<%=list[i].NAME%>"></td>
				   			<td><button id="update_<%=list[i].SEQ%>" class="update listbtn skybtn">수정</button></td>
				   			<td><button id="delete_<%=list[i].SEQ%>" class="delete listbtn ml5 redbtn">삭제</button></td>
				   		</tr>
				   		<% } %>
						</tbody>
					</table>
				</div>
				
				<div>
					<table class="thead-tbl">
			   		<colgroup>
							<col>
							<col style="width:8%">
						</colgroup>
						<thead>
							<tr>
								<th>부서명</th>
								<th>등록</th>
							</tr>
						</thead>
			   		<tbody>
				   		<tr>
				   			<td><input type="text" id="name" class="listmodi" value="등록하실 부서명을 입력하세요."></td>
				   			<td><button id="addBtn" class="listbtn ml5 whitebtn">등록</button></td>
				   		</tr>
			   		</tbody>
			   	</table>  
				</div>
  		
  	</div>
  </div>
  
  </body>
  <script src='/adm/js/department.js'></script>
</html>
