<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <% include ../common/head %>
  </head>
  <body>
  	<input type="hidden" id="page" name="page" value="<%=page%>">
  	<input type="hidden" id="category" name="category" value="<%=category%>">
  	
    <div class="main-wrap">
    	<% include ../common/menu %>
  		<div class="content-wrap">
  		<h2><%= title %></h2>
    	
    	<div class="search">
    		<select id="scheduleCategory" style="margin-right: 5px;">
    		<% for(let i=0; i<schList.length; ++i){ %>
    	  	
    	  	<% if (schList[i].SEQ == schedule) {%>
    	  	<option value="<%=schList[i].SEQ%>" selected="selected"><%=schList[i].NAME%></option>
    	  	<%} else {%>
    	  	<option value="<%=schList[i].SEQ%>"><%=schList[i].NAME%></option>
    			<%}%>
    		<%}%>
				</select>
				
				<select id="searchCategory">
				  <option value="examName" selected="selected">고사장</option>
				  <option value="school">학교명</option>
				  <option value="department">소속</option>
				  <option value="position">직책</option>
				  <option value="name">이름</option>
				  <option value="cellphone">연락처</option>
				</select>
				<form id="searchForm" method="get">
				<fieldset>
					<legend>검색</legend>
					<input type="text" id="searchWord" value="<%=word%>">
					<input type="button" value="검색" class="sbtn" data-url="/admin/apply/list" id="searchBtn">
				</fieldset>
				</form>
			</div>
    
    	<div>
					<table class="thead-tbl">
						<colgroup>
							<col style="width:10%">
							<col style="width:10%">
							<col style="width:*%">
							<col style="width:10%">
							<col style="width:15%">
							<col style="width:10%">
							<col style="width:10%">
							<col style="width:15%">
						</colgroup>
						<thead>
							<tr>
				   			<th>번호</th>
				   			<th>고사장</th>
				   			<th>학교</th>
				   			<th>반</th>
								<th>소속</th>
				   			<th>직책</th>
				   			<th>이름</th>	
				   			<th>연락처</th>	
				   		</tr>
						</thead>
						<tbody>
							<% for(let i=0; i<list.length; ++i){ %>
				   		<tr>
				   			<td><%=max-i%></td>
				   			<td><%=list[i].EXAM_NAME%></td>
				   			<td><%=list[i].EXAM_SCHOOL%></td>
				   			<td><%=list[i].CLASS%></td>
				   			<td><%=list[i].DEPARTMENT%></td>
				   			<td><%=list[i].POSITION%></td>
				   			<td><%=list[i].USER_NAME%></td>
				   			<td><%=list[i].CELLPHONE%></td>
				   		</tr>
				   		<% } %>
						</tbody>
					</table>
				</div>
  		
  			<% if(result == true) { %>
  			<div class="pagenum">
					<ul>
						<% if(page > pageSize) { %>
						<li><a href="/admin/apply/list/1/<%=schedule.SEQ%>/<%=search%>"><i class="fa fa-angle-double-left"></i></a></li>
						<li><a href="/admin/apply/list/<%=startPage-1%>/<%=schedule.SEQ%>/<%=search%>"><i class="fa fa-angle-left"></i></a></li>
						<% } %>
						
						<% for (var i=startPage; i<=endPage; i++) { %>
			        	<% if (i== page) {%>
			        	<li class="on"><%=i%></li>
			        	<% } else { %>
			        	<li><a href="/admin/apply/list/<%=i%>/<%=schedule.SEQ%>"><%=i%></a></li>
			       		<% } %>
			      		<% } %>
						
						<% if (endPage < totalPage) { %>
						<li><a href="/admin/apply/list/<%=endPage+1%>/<%=schedule.SEQ%>/<%=search%>"><i class="fa fa-angle-right"></i></a></li>
						<li><a href="/admin/apply/list/<%=totalPage%>/<%=schedule.SEQ%>/<%=search%>"><i class="fa fa-angle-double-right"></i></a></li>
			      <% } %>
					</ul>
				</div>
				<% } %>
  		
  		</div>
    </div>
    
  </body>
  <script src='/adm/js/apply.js'></script>
</html>
